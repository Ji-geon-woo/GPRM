<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <section id="inner">
        <form action="/register" method="POST">
            <% if (errors.length == 0) {%> 
            <div class="registerBox">
                <div class="inputBox">
                    <div>
                        <div class="Box">
                            <!-- id -->
                            <div class="text">ID</div>
                            <input type="text" id="ID" class="textBox" placeholder="ID" name="ID" value="<%= typeof id != 'undefined' ? id : '' %>">
                        </div>
                    </div>
                    <div class="Box">
                        <!-- name -->
                        <div class="text">이름</div>
                        <input type="text" id="name" class="textBox" placeholder="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>">
                    </div>
                    <div class="checkbox">
                        <div class="student">
                            <p>학생</p>
                            <input type="checkbox" name="role" value="student">
                        </div>
                        <div class="student">
                            <p>선생님</p>
                            <input type="checkbox" name="role" value="teacher">
                        </div>
                        <div class="student">
                            <p>학생자치회</p>
                            <input type="checkbox" name="role" value="council">
                        </div>
                    </div>
                    <div class="passwordBox">
                        <div class="Box">
                            <!-- password -->
                            <div class="text">비밀번호</div>
                            <input type="text" id="PW1" class="textBox" placeholder="PW1" name="PW1" value="<%= typeof PW1 != 'undefined' ? PW1 : '' %>">
                        </div>
                        <div class="Box">
                            <!-- password -->
                            <div class="text">비밀번호 확인</div>
                            <input type="text" id="PW2" class="textBox" placeholder="PW2" name="PW2" value="<%= typeof PW2 != 'undefined' ? PW2 : '' %>">
                        </div>
                    </div>
                    <div>
                        <input type="submit" class="register">Register</input>
                    </div>
                </div>
            </div>
            <% } else { %> 
                <h1><%= errors.message %></h1>
            <% } %> 
        </form>
    </section>
</body>
</html>